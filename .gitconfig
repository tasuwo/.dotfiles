#
# .gitconfig
#
[core]
    editor = emacs
    excludesfile = ~/.gitignore
	trustctime = false
[include]
    path = ~/.gitconfig_local
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto
[alias]
    st = status
    ad = add
    ai = add -i
    cm = commit -m
    co = checkout
    df = diff
    ft = fetch
    mg = merge
    ps = push
    remotes = remote -v
    tr = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
[push]
default = matching
